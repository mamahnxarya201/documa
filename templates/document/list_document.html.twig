{% extends 'base.html.twig' %}

{% block title %}Document List{% endblock %}

{% block content %}
        <div class="container">
            <div class="d-flex justify-content-between py-3 align-items-center">
                <div class="d-flex align-items-center">
                    <div class="input-group input-group-sm mb-3 border-dark">
                        <span class="input-group-text border-dark">{{ ux_icon('tabler:search', {'class': 'icon-md'}) }}</span>
                        <div class="form-floating">
                            <input type="text" class="form-control border-dark" id="floatingInputGroup1" placeholder="Username">
                            <label for="floatingInputGroup1">Search</label>
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div class=" d-flex align-items-center ms-4">
                        <div class="btn btn-outline-dark btn-md d-flex align-items-center" style="background-color: white;">
                            <twig:ux:icon name="tabler:filter" class="icon-md" />
                            <span class="ms-2" style="color: black;">Filter</span>
                        </div>
                    </div>
                    <div class="d-flex align-items-center ms-4">
                        <div class="btn btn-outline-dark btn-md d-flex align-items-center" style="background-color: white;">
                            <twig:ux:icon name="tabler:sort-descending-2" class="icon-md" />
                            <span class="ms-2" style="color: black;">Sort</span>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for document in documents %}
                    <div class="col">
                        {{ component('document_view_card', {
                            name: document.name,
                            author: document.author,
                            status: document.status,
                            total_files: document.total_files,
                            tags: document.tags,
                            shared_to: document.shared_to
                        }) }}
                    </div>
                {% endfor %}
            </div>
        </div>
{% endblock %}
