{% extends 'base.html.twig' %}

{% block title %}Detail Document{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/detail_document.scss') }}">
{% endblock %}

{% block content %}
    <div class="container" data-controller="scroll">
        <div class="row">
            <div id="left-content-card" data-scroll-target="leftContent" class="col-md-7 card p-3 mb-3">
                <div class="py-2 d-flex align-items-center">
                    <twig:ux:icon name="tabler:books" class="ms-2" style="width: 57px; height: 65px;"/>
                    <div class="ml-3">
                        <h3 class="px-2">{{ document.name }}</h3>
                        <h5 class="px-2">{{ document.type }}</h5>
                    </div>
                </div>
                <div id="vehicle-info-card" class="card mb-4 custom-card" data-scroll-target="vehicleInfo">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <strong>Document Info</strong>
                        <div class="d-flex align-items-center">
                            <twig:ux:icon name="tabler:pencil" class="icon-sm svg-icon me-1 icon-blue"
                                          style="color: blue;"/>
                            <span class="text-blue" href="list_document.html.twig">Edit</span>
                        </div>

                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <p>
                                    <strong>Status:</strong>{% set statusColors = document.status | statusClass %}
                                    <span class="badge"
                                          style="background-color: {{ statusColors.bg }}; color: {{ statusColors.fg }}">{{ document.status }}</span>
                                </p>
                                <p><strong>Tags:</strong> {% for tag in document.tags %}
                                        <span class="badge"
                                              style="background-color: {{ tag.color_bg }}; color: {{ tag.color_fg }}">{{ tag.title }}</span>
                                    {% endfor %}</p>
                                <p><strong>Year:</strong> {% for group in document.shared_to %}
                                        <span class="badge"
                                              style="background-color: {{ group.color_bg }}; color: {{ group.color_fg }}">{{ group.title }}</span>
                                    {% endfor %}</p>
                                <p><strong>Total Files:</strong> {{ document.total_files }}</p>
                                <p><strong>Created At:</strong> {{ document.created_at|date('d M Y/h:i A') }}</p>
                                <p><strong>Last Update:</strong> {{ document.last_update|date('d M Y/h:i A') }}</p>
                                <p><strong>Published At:</strong> {{ document.published_at|date('d M Y/h:i A') }}</p>
                            </div>
                            <div>
                                <p>
                                    <strong>Author:</strong>
                                    {% set tierColors = document.author.tier | roleClass %}
                                    <span class="badge"
                                          style="background-color: {{ tierColors.bg }}; color: {{ tierColors.fg }}">{{ document.author.name }}</span>
                                </p>
                                <p>
                                    <strong>Reviewed By:</strong>
                                    {% set tierColors = document.reviewed_by.tier | roleClass %}
                                    <span class="badge"
                                          style="background-color: {{ tierColors.bg }}; color: {{ tierColors.fg }}">{{ document.reviewed_by.name }}</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="credentials-card" class="card custom-card" data-scroll-target="credentials">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <strong>Notes</strong>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h6>Vehicle Registration</h6>
                            <p><strong>Status:</strong> Awaiting approval</p>
                            <p><strong>Uploaded:</strong> 12/15/2023 5:11PM</p>
                        </div>
